<%= form_for @movie, :html => { multipart: true }, class: "form-horizontal" do |f| %>
  <% if @movie.errors.any? %>
    <div>
      <%= pluralize(@movie.errors.count, "error") %> prevented this movie from being submitted:
      <ul>
        <% @movie.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.label "title" %><br>
    <%= f.text_field "title" %>
  </div>
  <div class="form-group">
    <%= f.label "release_date" %><br>
    <%= f.date_field "release_date" %>
  </div>
  <div class="form-group">
    <%= f.label "director" %><br>
    <%= f.text_field "director" %>
  </div>
  <div class="form-group">
    <%= f.label "runtime_in_minutes" %><br>
    <%= f.number_field "runtime_in_minutes" %>
  </div>
  <div class="form-group">
    <%= f.label "upload_poster_image" %><br>
    <%= f.file_field :image %>
  </div>
  <div class="form-group">
    <%= f.label "or_image_url" %>
    <%= f.text_field "poster_image_url" %>
  </div>
  <div class="form-group">
    <%= f.label "description" %><br>
    <%= f.text_area "description" %>
  </div>
  <div>
    <%= f.submit "Submit", class: 'btn btn-primary' %> 
  </div>
<% end %>