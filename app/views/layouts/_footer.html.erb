<footer>
  <small>
    <% if admin? %>
      Signed in as <%= link_to "Admin", admin_users_path(@user) %>(<%= current_user.full_name %>) (<%= link_to "Log out", session_path("current"), method: :delete %>)
    <% else %>
      <% if current_user %>
        Signed in as <%= current_user.full_name %> (<%= link_to "Log out", session_path("current"), method: :delete %>)
      <% else %>
        <%= link_to "Log In", new_session_path %> | <%= link_to "Sign Up", new_user_path %>
      <% end %>
    <% end %>
  </small>
</footer>